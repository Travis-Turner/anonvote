<link rel="stylesheet" href="./public/styles/master.css">

<h1>AnonVote</h1>
<div class="flash">{{locals.flash.info}}</div>

<div id="message">{{locals.message}}</div>

<div id="message-board" class="pure-g">

{{#each locals.posts}}
  <div class="post-container pure-u-1-5">
    <img src="{{url}}" alt="user submitted image">
    <h4>{{title}}<a href="/post/{{_id}}"> ...(more)</a></h4>
    <span class="ratings">
      {{#if ../locals.user}}
      <form name={{_id}} class="upper" action="/post/{{_id}}/upvote" method = "post">
        <button class="voter" type="submit" name="button"><i class="fa fa-arrow-up"></i></button>
      </form>
      {{/if}}
      <span class="rating">{{rating}}</span>
      {{#if ../locals.user}}
      <form name={{_id}} class="downer" action="/post/{{_id}}/downvote" method = "post">
        <button class="voter" type="submit" name="button"><i class="fa fa-arrow-down"></i></button>
      </form>
      {{/if}}
    </span>
  </div>
{{/each}}
</div>
