<h1 id="submitPost">Submit Post</h1>
<form id="registrationForm" class="" action="/post" method="post">
  <p id="registerBlurb">Submit a new post.  You cannot edit your this once it is posted.</p>
  <div class="registrationInput">
    <label class="registerLabel" for="title">Title:</label>
    <input type="text" name="title" value="" required>
  </div>
  <div class="registrationInput">
    <label class="registerLabel" for="url">Image URL: (optional)</label>
    <input type="text" name="url" value="">
  </div>
  <div class="registrationInput">
    <label class="registerLabel" for="body">Message:</label>
    <input type="textarea" name="body" value="" required>
  </div>
  <div class="registrationForm" id="submitButton" class="postInput">
      <label class="registerLabel"></label>
      <input type="submit" name="" value="Complete">
  </div>
</form>
